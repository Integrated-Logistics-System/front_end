# 개발 환경 설정 (.env.development)
# 로컬 개발시 사용되는 환경변수

NODE_ENV=development

# API 엔드포인트 (개발 환경)
NEXT_PUBLIC_API_URL=http://localhost:8081/api
NEXT_PUBLIC_WS_URL=http://localhost:8083

# WebSocket 설정
NEXT_PUBLIC_WS_RECONNECT_ATTEMPTS=5
NEXT_PUBLIC_WS_RECONNECT_DELAY=3000
NEXT_PUBLIC_WS_TIMEOUT=120000

# UI 설정
NEXT_PUBLIC_STREAMING_CHUNK_DELAY=50
NEXT_PUBLIC_RECIPES_PER_PAGE=6

# 개발 도구
NEXT_TELEMETRY_DISABLED=1
NEXT_PUBLIC_DEBUG_MODE=true

# 이미지 도메인 (개발용)
NEXT_PUBLIC_IMAGE_DOMAINS=localhost,127.0.0.1,via.placeholder.com